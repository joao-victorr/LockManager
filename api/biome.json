{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
    "ignoreUnknown": true,
    "ignore": ["node_modules/**/*.js", "**/*.json", "**/dist", "**/out", "public/**/*.js"]
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["./node_modules/**/*.js"]
	},
	"javascript": {
		"formatter": {
		"enabled": true,
		"arrowParentheses": "always",
		"quoteStyle": "single",
		"bracketSpacing": true,
		"bracketSameLine": true,
		"lineWidth": 80,
		"indentWidth": 8,
		"indentStyle": "tab"
	}
	}
}
